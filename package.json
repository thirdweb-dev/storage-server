{
  "name": "storage-server",
  "version": "1.0.0",
  "description": "Server to simply storage with IPFS",
  "main": "src/index.ts",
  "author": "Danny Friday <nessup@gmail.com>",
  "type": "module",
  "scripts": {
    "build": "tsc -p ./tsconfig.json --outDir dist",
    "start": "node dist/index.js",
    "dev": "NODE_ENV=development nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "infra:dev": "docker compose --env-file ./.env.development up",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "migration:generate": "NODE_ENV=development ./scripts/migration-generate.sh",
    "migration:run:dev": "NODE_ENV=development ./scripts/migration-run.sh"
  },
  "dependencies": {
    "@web3-storage/w3up-client": "^4.2.0",
    "body-parser": "^1.20.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "fix-esm": "^1.0.1",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.12"
  },
  "devDependencies": {
    "@swc/core": "^1.3.41",
    "@types/express": "^4.17.17",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.4",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "nodemon": "^2.0.21",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  }
}
